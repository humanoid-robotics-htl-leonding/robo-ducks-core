#Do not edit
root    ALL=(ALL) ALL
#allow user nao to shutdown the robot
nao     ALL=NOPASSWD:/sbin/shutdown -h now
nao     ALL=NOPASSWD:/sbin/shutdown -r now
nao     ALL=NOPASSWD:/etc/init.d/naoqi
nao     ALL=NOPASSWD:/etc/init.d/hulk
nao     ALL=NOPASSWD:/home/nao/bin/setNetwork
nao     ALL=NOPASSWD:/home/nao/bin/setConfiguration

#allow user nao to switch to production mode
nao     ALL=NOPASSWD:/usr/libexec/firewall/lock-production.sh
